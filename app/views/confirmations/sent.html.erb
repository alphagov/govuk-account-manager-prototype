  <%= render partial: "confirmations/_sent/finish_creating", locals: {
    email: @email,
    user_is_confirmed: @user_is_confirmed
    } %>
<% else %>
  <%= render partial: "confirmations/_sent/confirm_change", locals: {
    email: @email,
    user_is_confirmed: @user_is_confirmed
    }  %>
<% end %>
